<h1><%= @categorie.nom %></h1>

<%= link_to 'Nouvelle Note',  new_note_path(:note => {:categorie_id => @categorie.id}) if user_signed_in? %>
<% if user_signed_in? %>
  | <%= link_to 'Renommer Catégorie', edit_categorie_path(@categorie) %>
  <% if @notes.empty? %>
    <%= link_to 'Supprimer Catégorie', @categorie, :confirm => 'Etes-vous sur ?', :method => :delete %>
  <% end %>
<% end %>

<% @notes.each do |note| %>
  <%= render :partial => 'notes/note', :locals => {:note => note} %>
<% end %>
