<h1><%= @categorie.nom %></h1>
<hr class="links"/>

<div class="subnav">
  <ul class="nav nav-pills">
    <li><%= link_to 'Nouvelle Note',  new_note_path(:note => {:categorie_id => @categorie.id}) %>
    <li><%= link_to 'Modifier Catégorie', edit_categorie_path(@categorie) %>
    <% if @notes.empty? %>
      <li><%= link_to 'Supprimer Catégorie', @categorie, :confirm => 'Etes-vous sur ?', :method => :delete %>
    <% end %>
  </ul>
</div>

<% @notes.each do |note| %>
  <%= render :partial => 'notes/note', :locals => {:note => note} %>
<% end %>

<% content_for :right do %>
  <%= render :partial => 'toc' %>
<% end %>
