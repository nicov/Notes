<!DOCTYPE html>
<html>
  <head>
    <title>Notes</title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="head">
      <%= render :partial => 'heading' %>
    </div>
    
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <%= render :partial => 'navigation' %>
        </div>
        <div class="span6">
          <%= yield %>
        </div>
        <div class="span3">
          <%= yield :right %>
        </div>
      </div>
    </div>
    
  </body>
</html>
