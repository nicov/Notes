<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <dt><%= f.label :titre %></dt>
  <dd><%= f.text_field :titre %></dd>
  <dt><%= f.label :categorie_id %></dt>
  <dd>
    <select id="note_categorie_id" name="note[categorie_id]">
      <%= options_for_select(Categorie.select_map(false), @note.categorie_id) %>
    </select>
  </dd>

  <%= f.text_area :contenu, :cols => 82 %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<% content_for :right do %>
  <div class="column-header">
    <h1>Textile reference</h1>
    <hr/>
  </div>
  
  <div class="column-content">
    <%= render :partial => 'application/textile_reference' %>
  </div>
<% end %>
